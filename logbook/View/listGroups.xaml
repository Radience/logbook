<Page x:Class="Diplom.View.listGroups"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplom.View"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="listGroups">

    <ListBox x:Name="listGroup" Background="{x:Null}" MouseDoubleClick="listGroup_MouseDoubleClick" Foreground="White" FontSize="15" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" BorderBrush="{x:Null}" FontFamily="Consolas">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Grid Background="#212D40" Width="350" Height="100" Margin="0,10">
                    <TextBlock Text="{Binding groupa}" FontSize="25" FontFamily="Consolas" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                </Grid>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</Page>